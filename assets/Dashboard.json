        "tags": [
          "StatisticsApi"
        ],
        "summary": "Получить сумму денег по всем активам с учетом онлайн",
        "parameters": [
          {
            "name": "IsOnline",
            "in": "query",
            "required": true,
            "schema": {
              "type": "boolean"
            }
