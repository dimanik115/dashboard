          },
          "type": {
            "type": "string",
            "description": "Тип актива"
          },
          "country": {
            "type": "string",
            "description": "Страна"
          },
          "sector": {
            "type": "string",
            "description": "Сектор (отрасль)"
          },
          "isBought": {
            "type": "boolean",
            "description": "Куплено ли"
          },
          "description": {
            "type": [
              "null",
              "string"
            ],
            "description": "Описание"
          },
          "tinkUid": {
            "type": [
              "null",
              "string"
            ],
            "description": "Описание"
          },
          "color": {
            "type": [
              "null",
              "string"
            ],
            "description": "Цвет для фронта"
          }
        }
      },
      "Broker": {
        "enum": [
          "ALPHA",
          "BCS",
          "T",
          "SBER",
          "FINAM",
          "VTB",
          "CIFRA",
          "MKB",
          "GPB",
          "MTS"
        ],
        "description": "Брокер"
      },
      "BuySell": {
        "enum": [
          "Buy",
          "Sell"
        ],
        "description": "Покупка или продажа"
      },
      "CountryStatistics": {
        "required": [
          "id",
          "country",
          "sum",
          "currency",
          "sumRub",
          "percent",
          "sumRubNow"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id",
            "format": "int32"
          },
          "country": {
            "type": "string",
            "description": "Страна"
          },
          "sum": {
            "type": "number",
            "description": "Сумма по объему денег",
            "format": "double"
          },
          "currency": {
            "$ref": "#/components/schemas/Currency"
          },
          "sumRub": {
            "type": "number",
            "description": "Сумма по объему денег в рублях",
            "format": "double"
          },
          "percent": {
            "type": "number",
            "description": "Процент от всей суммы",
            "format": "double"
          },
          "sumRubNow": {
            "type": "number",
            "description": "Сумма по объему денег в рублях на сейчас",
            "format": "double"
          }
        }
      },
      "Currency": {
        "enum": [
          "RUB",
          "USD",
          "EUR",
          "HKD",
          "CNY",
          "AED",
          "JPY"
        ],
        "description": "Валюта"
      },
      "CurrencyAvgPrice": {
        "required": [
          "currency",
          "avgPrice",
          "avgPriceNow"
        ],
        "type": "object",
        "properties": {
          "currency": {
            "$ref": "#/components/schemas/Currency"
          },
          "avgPrice": {
            "type": "number",
            "description": "Средний курс покупки",
            "format": "double"
          },
          "avgPriceNow": {
            "type": "number",
            "description": "Средний курс покупки на сейчас",
            "format": "double"
          }
        }
      },
      "Filter": {
        "required": [
          "logicalOperation",
          "items"
        ],
        "type": [
          "null",
          "object"
        ],
        "properties": {
          "logicalOperation": {
            "$ref": "#/components/schemas/LogicalOperation"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FilterItem"
            }
          }
        },
        "description": "Фильтр"
      },
      "FilterItem": {
        "required": [
          "field",
          "value",
          "filterOperation"
        ],
        "type": "object",
        "properties": {
          "field": {
            "type": "string"
          },
          "value": { },
          "filterOperation": {
            "$ref": "#/components/schemas/FilterOperation"
          }
        }
      },
      "FilterOperation": {
        "enum": [
          "Equal",
          "NotEqual",
          "GreaterThan",
          "GreaterThanOrEqual",
          "LessThan",
          "LessThanOrEqual",
          "Contains",
          "In"
        ]
      },
      "LogicalOperation": {
        "enum": [
          "And",
          "Or"
        ]
      },
      "QueryParams": {
        "type": "object",
        "properties": {
          "sort": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "$ref": "#/components/schemas/Sort"
            },
            "description": "Сортировка"
          },
          "filter": {
            "$ref": "#/components/schemas/Filter"
          },
          "page": {
            "type": [
              "null",
              "integer"
            ],
            "description": "Номер страницы",
            "format": "int32"
          },
          "pageSize": {
            "type": [
              "null",
              "integer"
            ],
            "description": "Число записей на странице",
            "format": "int32"
          }
        }
      },
      "SectorStatistics": {
        "required": [
          "id",
          "sector",
          "sumRub",
          "percent",
          "sumRubNow"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id",
            "format": "int32"
          },
          "sector": {
            "type": "string",
            "description": "Сектор"
          },
          "sumRub": {
            "type": "number",
            "description": "Сумма по объему денег в рублях",
            "format": "double"
          },
          "percent": {
            "type": "number",
            "description": "Процент от всей суммы",
            "format": "double"
          },
          "sumRubNow": {
            "type": "number",
            "description": "Сумма по объему денег в рублях на сейчас",
            "format": "double"
          }
        }
      },
      "Seed": {
        "required": [
          "broker",
          "seedMoney"
        ],
        "type": "object",
        "properties": {
          "broker": {
            "$ref": "#/components/schemas/Broker"
          },
          "seedMoney": {
            "type": "integer",
            "description": "Сколько вложено",
            "format": "int32"
          }
        }
