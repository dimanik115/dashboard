{
  "openapi": "3.1.1",
  "info": {
    "title": "Dashboard | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/trades/list": {
      "post": {
        "tags": [
          "TradesApi"
        ],
        "summary": "Получить все сделки с учетом фильтрации и пагинации",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueryParams"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Trade"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/v1/trades/getseedmoney": {
      "get": {
        "tags": [
          "TradesApi"
        ],
        "summary": "Получить количество вложенных денег по брокерам",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Seed"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
