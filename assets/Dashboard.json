          "currency": {
            "$ref": "#/components/schemas/Currency"
          },
          "country": {
            "type": "string",
            "description": "Страна"
          },
          "sector": {
            "type": "string",
            "description": "Сектор (отрасль)"
          },
          "type": {
            "type": "string",
            "description": "Тип актива"
          },
          "source": {
            "type": "string",
            "description": "Источник данных"
          },
          "color": {
            "type": [
              "null",
              "string"
