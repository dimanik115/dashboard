{
  "openapi": "3.1.1",
  "info": {
    "title": "Dashboard | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/trades/list": {
      "post": {
        "tags": [
          "TradesApi"
        ],
        "summary": "Получить все сделки с учетом фильтрации и пагинации",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueryParams"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Trade"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/v1/trades/getseedmoney": {
      "get": {
        "tags": [
          "TradesApi"
        ],
        "summary": "Получить количество вложенных денег",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer",
                  "format": "int32"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/v1/statistics/list": {
      "get": {
        "tags": [
          "StatisticsApi"
        ],
        "summary": "Получить статистику",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Statistics"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/v1/bookmarks/list": {
      "get": {
        "tags": [
          "BookmarksApi"
        ],
        "summary": "Получить все сохраненные закладки",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Bookmark"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Bookmark": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "source": {
            "type": "string"
          },
          "ticker": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "description": {
            "type": [
              "null",
              "string"
            ]
          }
        }
      },
      "Broker": {
        "enum": [
          "Alpha",
          "Bcs",
          "T",
          "Sber",
          "Finam",
          "Vtb",
          "Cifra",
          "Mkb",
          "Gpb",
          "Mts"
        ]
      },
      "BuySell": {
        "enum": [
          "B",
          "S"
        ]
      },
      "Currency": {
        "enum": [
          "RUB",
          "USD",
          "EUR"
        ]
      },
      "Filter": {
        "required": [
          "logicalOperation",
          "items"
        ],
        "type": [
          "null",
          "object"
        ],
        "properties": {
          "logicalOperation": {
            "$ref": "#/components/schemas/LogicalOperation"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FilterItem"
            }
          }
        },
        "description": "Фильтр"
      },
      "FilterItem": {
        "required": [
          "field",
          "value",
          "filterOperation"
        ],
        "type": "object",
        "properties": {
          "field": {
            "type": "string"
          },
          "value": { },
          "filterOperation": {
            "$ref": "#/components/schemas/FilterOperation"
          }
        }
      },
      "FilterOperation": {
        "enum": [
          "Equal",
          "NotEqual",
          "GreaterThan",
          "GreaterThanOrEqual",
          "LessThan",
          "LessThanOrEqual",
          "Contains",
          "In"
        ]
      },
      "LogicalOperation": {
        "enum": [
          "And",
          "Or"
        ]
      },
      "QueryParams": {
        "type": "object",
        "properties": {
          "sort": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "$ref": "#/components/schemas/Sort"
            },
            "description": "Сортировка"
          },
          "filter": {
            "$ref": "#/components/schemas/Filter"
          },
          "page": {
            "type": [
              "null",
              "integer"
            ],
            "description": "Номер страницы",
            "format": "int32"
          },
          "pageSize": {
            "type": [
              "null",
              "integer"
            ],
            "description": "Число записей на странице",
            "format": "int32"
          }
        }
      },
      "Sort": {
        "required": [
          "direction",
          "field"
        ],
        "type": "object",
        "properties": {
          "direction": {
            "$ref": "#/components/schemas/SortDirection"
          },
          "field": {
            "type": "string"
          }
        },
        "description": "модель сортировки"
      },
      "SortDirection": {
        "enum": [
          "Asc",
          "Desc"
        ],
        "description": "Направления сортировки"
      },
      "Statistics": {
        "required": [
          "id",
          "ticker",
          "avgPrice",
          "sumCount",
          "total",
          "currency"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id",
            "format": "int32"
          },
          "ticker": {
            "type": "string",
            "description": "Тикер"
          },
          "avgPrice": {
            "type": "number",
            "description": "Средняя цена в целом",
            "format": "double"
          },
          "sumCount": {
            "type": "integer",
            "description": "Сумма по количеству штук",
            "format": "int32"
          },
          "total": {
            "type": "number",
            "description": "Сумма по объему денег",
            "format": "double"
          },
          "currency": {
            "$ref": "#/components/schemas/Currency"
          }
        }
      },
      "Trade": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "ticker": {
            "type": "string"
          },
          "tradeDate": {
            "type": "string",
            "format": "date-time"
          },
          "avgPrice": {
            "type": "number",
            "format": "double"
          },
          "count": {
            "type": "integer",
            "format": "int32"
          },
          "sum": {
            "type": "number",
            "format": "double"
          },
          "currency": {
            "$ref": "#/components/schemas/Currency"
          },
          "buySell": {
            "$ref": "#/components/schemas/BuySell"
          },
          "broker": {
            "$ref": "#/components/schemas/Broker"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "TradesApi"
    },
    {
      "name": "StatisticsApi"
    },
    {
      "name": "BookmarksApi"
    }
  ]
}